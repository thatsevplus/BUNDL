{% if section.settings.text != blank %}
  <div class="bg-white/5 border-b border-white/5 text-white text-center py-2 px-4">
    <p class="text-xs sm:text-sm font-medium tracking-wide">
      {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}" class="text-white/70 hover:text-accent no-underline transition-colors">
          {{ section.settings.text }}
        </a>
      {% else %}
        <span class="text-white/70">{{ section.settings.text }}</span>
      {% endif %}
    </p>
  </div>
{% endif %}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Free shipping on orders over €50 — Subscribe & save 15%"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ]
}
{% endschema %}
