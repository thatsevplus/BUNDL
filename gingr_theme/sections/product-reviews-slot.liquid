{%- comment -%}
  Reviews slot
  Container for Shopify native product reviews app block
{%- endcomment -%}

<section class="section-padding bg-white">
  <div class="gingr-container max-w-4xl">
    <h2 class="text-xl font-bold text-gingr-navy mb-6 text-center">{{ section.settings.heading }}</h2>

    {%- comment -%} App block slot for reviews {%- endcomment -%}
    <div class="reviews-container">
      {% for block in section.blocks %}
        <div {{ block.shopify_attributes }}>
          {% render block %}
        </div>
      {% endfor %}
    </div>

    {%- comment -%} Fallback if no app block is installed {%- endcomment -%}
    {% if section.blocks.size == 0 %}
      <div class="text-center py-8">
        <p class="text-sm text-gray-400">Reviews will appear here once the reviews app is connected.</p>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Product Reviews",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What customers say"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
