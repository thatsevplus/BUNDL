<section class="section-padding">
  <div class="gingr-container">
    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-3xl font-bold">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="text-sm text-subheading mt-2">
          {{ section.settings.subheading }}
          {% if section.settings.instagram_handle != blank %}
            <a href="{{ section.settings.instagram_url }}" class="font-semibold hover:underline no-underline" style="color:var(--color-accent);" target="_blank" rel="noopener">
              {{ section.settings.instagram_handle }}
            </a>
          {% endif %}
        </p>
      {% endif %}
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-4">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link | default: section.settings.instagram_url }}"
           target="_blank"
           rel="noopener"
           class="aspect-square rounded-2xl overflow-hidden bg-white/5 border border-white/10 group block"
           {{ block.shopify_attributes }}>
          {% if block.settings.image %}
            {{ block.settings.image | image_url: width: 500 | image_tag:
              class: 'w-full h-full object-cover group-hover:scale-105 transition-transform duration-300',
              loading: 'lazy',
              widths: '250,400,500'
            }}
          {% else %}
            <div class="w-full h-full flex items-center justify-center text-white/10">
              <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069ZM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0Zm0 5.838a6.162 6.162 0 1 0 0 12.324 6.162 6.162 0 0 0 0-12.324ZM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8Zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881Z"/></svg>
            </div>
          {% endif %}
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Social proof",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "People are loving us"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Share your GINGR experience"
    },
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Instagram handle",
      "default": "@gingr"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    }
  ],
  "blocks": [
    {
      "type": "photo",
      "name": "Photo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social proof",
      "blocks": [
        { "type": "photo" },
        { "type": "photo" },
        { "type": "photo" },
        { "type": "photo" },
        { "type": "photo" },
        { "type": "photo" },
        { "type": "photo" },
        { "type": "photo" }
      ]
    }
  ]
}
{% endschema %}
