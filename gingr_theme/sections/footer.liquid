{%- comment -%}
  Modem-style animated footer (inspired by 21st.dev). No center icon.
  Animated gradient line at top, clean link row.
{%- endcomment -%}

<footer class="footer-modem relative mt-auto overflow-hidden bg-[#080808]" data-section-id="{{ section.id }}" role="contentinfo">
  {%- comment -%} Animated gradient line at top (modem style) {%- endcomment -%}
  <div class="footer-modem__line" aria-hidden="true"></div>

  <div class="gingr-container section-padding">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 lg:gap-12">
      {%- comment -%} Brand {%- endcomment -%}
      <div class="lg:col-span-1">
        {% if section.settings.logo %}
          {{ section.settings.logo | image_url: width: 160 | image_tag: class: 'h-9 w-auto mb-4 opacity-90', loading: 'lazy' }}
        {% else %}
          <p class="font-bold text-lg tracking-tight text-white mb-2">{{ shop.name }}</p>
        {% endif %}
        {% if section.settings.description != blank %}
          <p class="text-sm text-white/40 leading-relaxed">{{ section.settings.description }}</p>
        {% endif %}
        <div class="flex gap-4 mt-4">
          {% if settings.social_instagram != blank %}
            <a href="{{ settings.social_instagram }}" class="text-white/35 hover:text-white transition-colors" aria-label="Instagram" target="_blank" rel="noopener">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069ZM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0Zm0 5.838a6.162 6.162 0 1 0 0 12.324 6.162 6.162 0 0 0 0-12.324ZM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8Zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881Z"/></svg>
            </a>
          {% endif %}
          {% if settings.social_tiktok != blank %}
            <a href="{{ settings.social_tiktok }}" class="text-white/35 hover:text-white transition-colors" aria-label="TikTok" target="_blank" rel="noopener">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07Z"/></svg>
            </a>
          {% endif %}
          {% if settings.social_facebook != blank %}
            <a href="{{ settings.social_facebook }}" class="text-white/35 hover:text-white transition-colors" aria-label="Facebook" target="_blank" rel="noopener">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            </a>
          {% endif %}
        </div>
      </div>

      {%- for block in section.blocks -%}
        {% case block.type %}
          {% when 'menu' %}
            {% if block.settings.menu != blank %}
              <div {{ block.shopify_attributes }}>
                <p class="font-semibold text-xs mb-4 uppercase tracking-wider text-white/50">{{ block.settings.heading | default: 'Links' }}</p>
                <ul class="space-y-2.5">
                  {% for link in block.settings.menu.links %}
                    <li>
                      <a href="{{ link.url }}" class="text-sm text-white/40 hover:text-white no-underline transition-colors inline-block">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
          {% when 'newsletter' %}
            <div {{ block.shopify_attributes }}>
              <p class="font-semibold text-xs mb-4 uppercase tracking-wider text-white/50">{{ block.settings.heading | default: 'Newsletter' }}</p>
              {% if block.settings.text != blank %}<p class="text-sm text-white/40 mb-3">{{ block.settings.text }}</p>{% endif %}
              {% form 'customer', class: 'flex flex-col gap-2', id: 'footer-newsletter' %}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <input type="email" name="contact[email]" placeholder="{{ block.settings.placeholder | default: 'Your email' }}" class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white placeholder-white/30 focus:outline-none focus:border-white/30 text-sm" required aria-label="Email">
                <button type="submit" class="btn-secondary py-3 w-full text-sm">{{ block.settings.button_text | default: 'Subscribe' }}</button>
              {% endform %}
            </div>
        {% endcase %}
      {% endfor %}

      {% if section.settings.show_payment_icons %}
        <div>
          <p class="font-semibold text-xs mb-4 uppercase tracking-wider text-white/50">We accept</p>
          <div class="flex flex-wrap gap-2 opacity-50">
            {% for type in shop.enabled_payment_types %}
              {{ type | payment_type_svg_tag: class: 'h-5' }}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>

    <div class="border-t border-white/10 mt-10 pt-6 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-xs text-white/30">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      <div class="flex items-center gap-4">
        {{ shop | login_button: action: 'follow' }}
        <span class="text-xs text-white/25">{{ powered_by_link }}</span>
      </div>
    </div>
  </div>
</footer>

<button type="button" class="fixed bottom-6 right-6 z-30 w-12 h-12 rounded-full bg-white/10 hover:bg-white/20 text-white flex items-center justify-center transition-opacity duration-300" style="opacity:0;pointer-events:none" data-back-to-top aria-label="Back to top">
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/></svg>
</button>

<style>
  .footer-modem {
    background: linear-gradient(180deg, #0c0c0c 0%, #050505 100%) !important;
    color: #fff;
  }

  .footer-modem .footer-modem__line {
    height: 3px;
    width: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.06) 25%,
      rgba(255, 225, 100, 0.25) 50%,
      rgba(255, 255, 255, 0.06) 75%,
      transparent 100%
    );
    background-size: 200% 100%;
    animation: footer-modem-line 8s ease-in-out infinite;
  }

  @keyframes footer-modem-line {
    0%, 100% { background-position: 100% 0; }
    50% { background-position: 0% 0; }
  }

  @media (prefers-reduced-motion: reduce) {
    .footer-modem .footer-modem__line { animation: none; }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer logo"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Brand description",
      "default": "Daily ginger shots. Real function. No gimmicks."
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading", "default": "Shop" },
        { "type": "link_list", "id": "menu", "label": "Menu" }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading", "default": "Newsletter" },
        { "type": "textarea", "id": "text", "label": "Description" },
        { "type": "text", "id": "placeholder", "label": "Email placeholder", "default": "Your email" },
        { "type": "text", "id": "button_text", "label": "Button text", "default": "Subscribe" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        { "type": "menu", "settings": { "heading": "Shop", "menu": "main-menu" } },
        { "type": "menu", "settings": { "heading": "Info" } },
        { "type": "newsletter", "settings": { "heading": "Stay fresh" } }
      ]
    }
  ]
}
{% endschema %}
