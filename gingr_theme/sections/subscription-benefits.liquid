{%- comment -%}
  Subscription benefits â€” Why subscribe? (benefit blocks)
  White-label: icon + title + description per block.
{%- endcomment -%}

<section class="section-padding" data-section-id="{{ section.id }}">
  <div class="gingr-container">
    {% if section.settings.heading != blank %}
      <h2 class="text-2xl md:text-3xl font-bold text-heading mb-8 text-center">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.discount_percent > 0 %}
      <p class="text-center text-body mb-10">{{ 'product.subscribe_save' | t }} {{ section.settings.discount_percent }}%</p>
    {% endif %}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'benefit' %}
            <div class="p-6 rounded-xl bg-white/5 border border-white/10 text-center" {{ block.shopify_attributes }}>
              <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-brand-primary/20 flex items-center justify-center text-brand-primary">
                {% assign icon_name = block.settings.icon | default: 'shield' %}{% render 'icon', name: icon_name, size: '24' %}
              </div>
              <h3 class="text-lg font-semibold text-heading mb-2">{{ block.settings.title }}</h3>
              {% if block.settings.description != blank %}
                <p class="text-sm text-body">{{ block.settings.description }}</p>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Subscription benefits",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why subscribe?"
    },
    {
      "type": "range",
      "id": "discount_percent",
      "label": "Subscription discount",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "%",
      "default": 15
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "lightning", "label": "Percent / Save" },
            { "value": "truck", "label": "Truck" },
            { "value": "shield", "label": "Shield / Lock" },
            { "value": "leaf", "label": "Leaf" },
            { "value": "star", "label": "Star" }
          ],
          "default": "shield"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Benefit title",
          "default": "Save 15%"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Subscription benefits",
      "blocks": [
        { "type": "benefit", "settings": { "icon": "percent", "title": "Save 15%" } },
        { "type": "benefit", "settings": { "icon": "calendar", "title": "Pause anytime" } },
        { "type": "benefit", "settings": { "icon": "truck", "title": "Free shipping" } },
        { "type": "benefit", "settings": { "icon": "lock", "title": "No commitment" } }
      ]
    }
  ],
  "disabled_on": { "groups": ["header", "footer"] }
}
{% endschema %}
