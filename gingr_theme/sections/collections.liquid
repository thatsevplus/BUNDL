{%- comment -%}
  List all collections
  Renders a grid of collection cards for /collections
{%- endcomment -%}

<section class="section-padding" data-section-id="{{ section.id }}">
  <div class="gingr-container">
    <h1 class="text-2xl md:text-3xl font-bold text-gingr-navy mb-8">{{ section.settings.heading }}</h1>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
      {% for collection in collections %}
        <a href="{{ collection.url }}" class="product-card group block no-underline">
          <div class="aspect-square bg-gray-50 overflow-hidden">
            {% if collection.featured_image %}
              {{ collection.featured_image | image_url: width: 600 | image_tag:
                class: 'w-full h-full object-cover group-hover:scale-105 transition-transform duration-300',
                loading: 'lazy',
                widths: '300,400,600'
              }}
            {% else %}
              <div class="w-full h-full flex items-center justify-center text-gray-300">
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>
              </div>
            {% endif %}
          </div>
          <div class="p-4">
            <h3 class="text-sm font-semibold text-gingr-font">{{ collection.title }}</h3>
            <p class="text-xs text-gray-500 mt-1">{{ collection.products_count }} products</p>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collections list",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our collections"
    }
  ]
}
{% endschema %}
